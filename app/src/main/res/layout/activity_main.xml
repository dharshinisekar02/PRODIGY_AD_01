<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="45dp"
        android:textColor="@color/grey"
        android:textAlignment="viewEnd"
        android:id="@+id/SolutionTxt"
        android:layout_above="@+id/resultTxt"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="55dp"
        android:textColor="@color/black"
        android:textAlignment="viewEnd"
        android:id="@+id/resultTxt"
        android:layout_above="@+id/calbtnall"
        android:layout_margin="12dp" />

    <LinearLayout
        android:id="@+id/calbtnall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingVertical="2dp">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_height="65dp"
                android:layout_width="78dp"
                app:cornerRadius="28dp"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="C"
                android:textSize="28dp"
                android:textColor="@color/blue"
                android:id="@+id/_button_c"
                android:backgroundTint="@color/lightblue" />
            <com.google.android.material.button.MaterialButton
                android:layout_height="65dp"
                android:layout_width="78dp"
                app:cornerRadius="28dp"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="("
                android:textSize="28dp"
                android:textColor="@color/blue"
                android:id="@+id/_button_openbracket"
                android:backgroundTint="@color/lightblue" />
            <com.google.android.material.button.MaterialButton
                android:layout_height="65dp"
                android:layout_width="78dp"
                app:cornerRadius="28dp"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text=")"
                android:textSize="28dp"
                android:textColor="@color/blue"
                android:id="@+id/_button_closebracket"
                android:backgroundTint="@color/lightblue" />
            <com.google.android.material.button.MaterialButton
                android:layout_height="65dp"
                android:layout_width="78dp"
                app:cornerRadius="28dp"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="/"
                android:textSize="32dp"
                android:textColor="@color/blue"
                android:id="@+id/_button_divide"
                android:backgroundTint="@color/lightblue" />
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_height="65dp"
                android:layout_width="78dp"
                app:cornerRadius="28dp"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="7"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/_button_7"
                android:backgroundTint="@color/dwhite" />
            <com.google.android.material.button.MaterialButton
                android:layout_height="65dp"
                android:layout_width="78dp"
                app:cornerRadius="28dp"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="8"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/_button_8"
                android:backgroundTint="@color/dwhite" />
            <com.google.android.material.button.MaterialButton
                android:layout_height="65dp"
                android:layout_width="78dp"
                app:cornerRadius="28dp"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="9"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/_button_9"
                android:backgroundTint="@color/dwhite" />
            <com.google.android.material.button.MaterialButton
                android:layout_height="65dp"
                android:layout_width="78dp"
                app:cornerRadius="28dp"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="*"
                android:textSize="32dp"
                android:textColor="@color/blue"
                android:id="@+id/_button_multiply"
                android:backgroundTint="@color/lightblue" />
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_height="65dp"
                android:layout_width="78dp"
                app:cornerRadius="28dp"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="4"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/_button_4"
                android:backgroundTint="@color/dwhite" />
            <com.google.android.material.button.MaterialButton
                android:layout_height="65dp"
                android:layout_width="78dp"
                app:cornerRadius="28dp"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="5"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/_button_5"
                android:backgroundTint="@color/dwhite" />
            <com.google.android.material.button.MaterialButton
                android:layout_height="65dp"
                android:layout_width="78dp"
                app:cornerRadius="28dp"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="6"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/_button_6"
                android:backgroundTint="@color/dwhite" />
            <com.google.android.material.button.MaterialButton
                android:layout_height="65dp"
                android:layout_width="78dp"
                app:cornerRadius="28dp"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="+"
                android:textSize="32dp"
                android:textColor="@color/blue"
                android:id="@+id/_button_add"
                android:backgroundTint="@color/lightblue" />
        </LinearLayout>

        <!-- Row 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_height="65dp"
                android:layout_width="78dp"
                app:cornerRadius="28dp"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="1"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/_button_1"
                android:backgroundTint="@color/dwhite" />
            <com.google.android.material.button.MaterialButton
                android:layout_height="65dp"
                android:layout_width="78dp"
                app:cornerRadius="28dp"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="2"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/_button_2"
                android:backgroundTint="@color/dwhite" />
            <com.google.android.material.button.MaterialButton
                android:layout_height="65dp"
                android:layout_width="78dp"
                app:cornerRadius="28dp"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="3"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/_button_3"
                android:backgroundTint="@color/dwhite" />
            <com.google.android.material.button.MaterialButton
                android:layout_height="65dp"
                android:layout_width="78dp"
                app:cornerRadius="28dp"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="-"
                android:textSize="32dp"
                android:textColor="@color/blue"
                android:id="@+id/_button_subtract"
                android:backgroundTint="@color/lightblue" />
        </LinearLayout>

        <!-- Row 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_height="65dp"
                android:layout_width="78dp"
                app:cornerRadius="28dp"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="AC"
                android:textSize="21dp"
                android:textColor="@color/black"
                android:id="@+id/_button_allclear"
                android:backgroundTint="@color/dwhite"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_height="65dp"
                android:layout_width="78dp"
                app:cornerRadius="28dp"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="0"
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/_button_0"
                android:backgroundTint="@color/dwhite" />
            <com.google.android.material.button.MaterialButton
                android:layout_height="65dp"
                android:layout_width="78dp"
                app:cornerRadius="28dp"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="."
                android:textSize="32dp"
                android:textColor="@color/black"
                android:id="@+id/_button_dot"
                android:backgroundTint="@color/dwhite" />
            <com.google.android.material.button.MaterialButton
                android:layout_height="65dp"
                android:layout_width="78dp"
                app:cornerRadius="28dp"
                android:layout_margin="8dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:text="="
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/_button_equals"
                android:backgroundTint="@color/blue" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
